<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"

    tools:context=".ui.perfil.Tab1Fragment" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Nombre de usuario"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextNombreUsuarioEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Contraseña"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextContrasenaEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Email"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextEmailEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Número de teléfono"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTelefonoEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonAplicarEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorBoton"
        android:text="Aplicar Cambios"
        android:textColor="@color/colorTexto"
        android:textSize="18sp" />
        <Button
            android:id="@+id/buttonBorrarEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorBoton"
            android:text="Eliminar perfil"
            android:textColor="@color/colorTexto"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>