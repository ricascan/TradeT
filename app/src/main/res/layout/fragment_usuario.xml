<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ui.usuarios.UsuarioFragment">

    <ImageView
        android:id="@+id/imageViewUsuario"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/textViewNombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nombre"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewEmailUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Email"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewTelefonoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Telefono"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonValorar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorBoton"
        android:text="Valorar"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonVerValoracionesUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBoton"
        android:text="Ver valoraciones"
        android:textColor="@color/colorTexto"
        android:textSize="24sp" />
</LinearLayout>